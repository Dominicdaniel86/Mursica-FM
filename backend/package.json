{
  "name": "mursica-fm-backend",
  "version": "1.1.2-alpha.3",
  "description": "A Node.js backend for hosting a third-party Spotify session app.",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "build": "npx tsc",
    "start": "node dist/server.js",
    "dev": "nodemon --legacy-watch --watch ./src --ext ts --exec 'node --inspect=0.0.0.0:9229 --nolazy --loader ts-node/esm' ./src/server.ts",
    "clean": "rm -rf dist",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prisma:migrate": "npx prisma migrate dev --name init",
    "prisma:push": "npx prisma db push",
    "prisma:generate": "npx prisma generate",
    "prisma:reset": "npx prisma reset",
    "prisma:studio": "npx prisma studio",
    "postinstall": "npx prisma generate",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Dominicdaniel86/MursicaFM"
  },
  "keywords": [
    "typescript",
    "backend",
    "spotify",
    "session",
    "nodejs"
  ],
  "author": "Dominic Daniel Kraemer",
  "license": "GPL-3.0-or-later",
  "dependencies": {
    "@prisma/client": "^6.3.1",
    "axios": "^1.7.9",
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "dotenv": "^16.5.0",
    "express": "^4.21.2",
    "nodemailer": "^7.0.3",
    "pino": "^9.6.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.24.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.8",
    "@types/express": "^5.0.0",
    "@types/node": "^22.13.1",
    "@types/nodemailer": "^6.4.17",
    "@typescript-eslint/eslint-plugin": "^8.32.0",
    "@typescript-eslint/parser": "^8.32.0",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "eslint-plugin-unused-imports": "^4.1.4",
    "esm": "^3.2.25",
    "nodemon": "^3.1.9",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.5.3",
    "prisma": "^6.3.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.29.1"
  },
  "engines": {
    "node": ">=22.12.0"
  }
}
